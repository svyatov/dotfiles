# Common
alias l='ls -lahG'
alias lm='l *.mp4'
alias h='cd ~'
alias b='cd -'
alias c='clear'
alias q='exit'
alias v='vim'
alias s='subl'
alias sn='subl --new-window'
alias g='git'
alias edf='sn ~/.dotfiles'
alias dfe='edf'
alias ea='sn ~/.dotfiles/zsh/aliases'
alias ae='ea'
alias ef='sn ~/.dotfiles/zsh/functions'
alias fe='ef'
alias ez='sn ~/.zshrc'
alias ze='ez'
alias egc='sn ~/.gitconfig'
alias gce='egc'
alias sig='sn .gitignore'
alias sca='source ~/.dotfiles/zsh/aliases'
alias scf='source ~/.dotfiles/zsh/functions'
alias shrl='exec $SHELL -l' # shell reload

# Copy public ssh key
alias cpssh='cat ~/.ssh/id_rsa.pub | pbcopy && echo "Public ssh key copied to clipboard!"'

# Pretty print json in shell, example:
# $ echo '[1, 2, 3, {"6": 7, "4": 5}]' | pj
#   [
#       1,
#       2,
#       3,
#       {
#           "4": 5,
#           "6": 7
#       }
#   ]
alias pj='python -m json.tool'

# Upgrade all pip packages to the newest available version
alias pup="pip freeze | grep -v '\-e' | cut -d= -f1 | xargs pip install -U"

# Global aliases
alias -g G='| grep'
alias -g L='| wc -l'

# Marks
alias j='jump'
alias m='mark'
alias um='unmark'
alias ms='marks'

# Exercism
alias exf='cd ~/Projects/GitHub/exercism && exercism fetch'
alias exs='exercism submit'

# Ruby and Rails
alias r='rails'
alias rk='rake'
alias rkm='rake db:migrate'
alias be='bundle exec'
alias bu='bundle update'
alias bi='bundle install'
alias bp='bundle package'
alias bpa='bundle package --all'
alias rbp='rails_best_practices'
alias capd='cap deploy'
alias capdm='cap deploy:migrations'

# Other
alias jn='jasmine-node'
alias memc='/usr/local/opt/memcached/bin/memcached -l 127.0.0.1'
alias ytd='youtube-dl --ignore-errors --continue'

# Current projects related stuff
MY_PROJECTS_ALIASES="${HOME}/.dotfiles/zsh/projects"
[[ -f $MY_PROJECTS_ALIASES ]] && source $MY_PROJECTS_ALIASES
