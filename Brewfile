# Brewfile - Install with: brew bundle
# Core tools referenced in dotfiles

brew "fzf"          # Fuzzy finder
brew "fd"           # Simple, fast find alternative (used with fzf)
brew "git-extras"   # Git utilities
brew "neovim"       # Text editor
brew "mise"         # Version manager

# Optional tools
brew "yt-dlp"       # Video downloader
brew "mosh"         # Mobile shell (better SSH)
brew "ngrok"        # Secure tunnels
