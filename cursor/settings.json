{
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[markdown]": {
    "editor.wordWrap": "on",
  },
  "cursor.composer.collapsePaneInputBoxPills": true,
  "cursor.general.enableShadowWorkspace": true,
  "editor.fontFamily": "'JetBrains Mono', 'Comic Code Ligatures', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.formatOnSave": true,
  "editor.rulers": [80, 100, 120],
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font'",
  "terminal.integrated.fontSize": 13,
  "editor.tabSize": 2,
  "git.enableSmartCommit": true,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "rubyLsp.addonSettings": {
    "Ruby LSP RSpec": {
      "rspecCommand": "bin/pspec",
    },
  },
  "rubyLsp.enabledFeatures": {
    "codeActions": true,
    "codeLens": true,
    "completion": true,
    "definition": true,
    "diagnostics": true,
    "documentHighlights": true,
    "documentLink": true,
    "documentSymbols": true,
    "foldingRanges": true,
    "formatting": true,
    "hover": true,
    "inlayHint": true,
    "onTypeFormatting": true,
    "selectionRanges": true,
    "semanticHighlighting": true,
    "signatureHelp": true,
    "typeHierarchy": true,
    "workspaceSymbol": true,
  },
  "rubyLsp.rubyExecutablePath": "/Users/leonid/.local/share/mise/shims/ruby",
  "search.exclude": {
    ".idea": true,
    ".rake_tasks": true,
    "**/sorbet/rbi": true,
    "log": true,
  },
  "vim.foldfix": true,
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-l>": false,
    "<C-s>": false,
    "<C-v>": false,
    "<C-z>": false,
    "<C-g>": false,
  },
  "vim.normalModeKeyBindings": [
    {
      "before": ["u"],
      "commands": ["undo"],
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"],
    },
  ],
  "window.commandCenter": true,
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#333",
  },
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "file-icons",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.excludeDirty": true,
  "workbench.editor.limit.value": 15,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "diffEditor.renderSideBySide": false,
  "gitlens.currentLine.dateFormat": "",
  "json.schemaDownload.enable": true,
  "editor.codeActionsOnSave": {},
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "git.confirmSync": false,
}
