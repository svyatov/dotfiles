[user]
    name = Leonid Svyatov
    email = leonid@svyatov.ru
[color]
    ui = true
[core]
    editor = vim
    excludesfile = ~/.dotfiles/git/.gitignore_global
    autocrlf = input
[alias]
    h = help
    # Adding
    a = add
    aa = add .
    # Logging
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    la = !git l --all
    lp = !git l --patch --word-diff
    # Status
    st = status --short --branch --untracked-files=all
    # Stashing
    s = stash
    sa = stash apply
    ski = stash --keep-index
    su = stash --include-untracked
    suki = stash --include-untracked --keep-index
    # Tags
    t = tag
    ta = tag --annotate
    # Checkout
    co = checkout
    cod = checkout develop
    com = checkout master
    cob = checkout -b
    # Branching
    br = branch
    brd = branch --delete
    # Commiting
    c = commit --verbose
    ca = commit --verbose --amend
    # Cherry-picking
    cp = cherry-pick
    # Pushing
    ps = push
    psa = push --all
    pst = push --tags
    # Pulling
    pl = pull
    plr = pull --rebase
    # Rebasing
    rb = rebase
    rbi = rebase --interactive
    rbc = rebase --continue
    rba = rebase --abort
    rbm = rebase master
    rbd = rebase develop
    # Merging
    m = merge
    md = merge develop
    mm = merge master
    mf = merge --no-ff
    # Diffs
    dt = difftool
    df = diff --word-diff=color --minimal
    dtc = difftool --cached
    dfc = diff --cached --word-diff=color --minimal
[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
    tool = Kaleidoscope
    # Allow git diff to do basic rename and copy detection
    renames = copies
    # Tell git diff to use mnemonic prefixes (index, work tree, commit, object) instead of the standard a and b notation
    mnemonicprefix = true
[difftool]
    prompt = false
[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true
[mergetool]
    prompt = false
[merge]
    tool = Kaleidoscope
[difftool "sourcetree"]
    cmd = /Applications/Kaleidoscope.app/Contents/MacOS/ksdiff -w \"$LOCAL\" \"$REMOTE\"
    path =
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[push]
    default = current
[credential]
	helper = osxkeychain
